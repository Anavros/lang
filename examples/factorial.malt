
factorial = Func(n=1:Num) : Num {
    return 1 if n == 1;
    return n + factorial(n-1);
}

main = Func {
    n = 5;
    result = factorial(n);
    print("{n}! => {result}");
}


def factorial(Num n=1),
    match n,
        1    => return 1
        else => return n + factorial(n-1)

def main(),
    def n, 5
    print("{n}! => {factorial(n)}")
