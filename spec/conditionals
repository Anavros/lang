
# Standard If Trees
if x {
    f();
} elif y {
    g();
} else {
    h();
}
if x { f(); } elif y { g(); } else { h(); }

# Inline Conditionals
f() if x;
f() if x else g();  # ?
var = f() if x;  # expression or statement?

# Matches
match {
    false : f();
    true  : g();
}

# Matches with Partial Application
match (? has iter) {
    x: x.iter();
    y: y.iter();
}
